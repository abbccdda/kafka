<import-control pkg="kafka">

  <!-- THINK HARD ABOUT THE LAYERING OF THE PROJECT BEFORE CHANGING THIS FILE -->

  <!-- common library dependencies -->
  <allow pkg="java" />
  <allow pkg="scala" />
  <allow pkg="javax.management" />
  <allow pkg="org.slf4j" />
  <allow pkg="org.junit" />
  <allow pkg="org.easymock" />
  <allow pkg="java.security" />
  <allow pkg="javax.net.ssl" />
  <allow pkg="javax.security" />

  <allow pkg="kafka.common" />
  <allow pkg="kafka.utils" />
  <allow pkg="kafka.serializer" />
  <allow pkg="org.apache.kafka.common" />

  <subpackage name="tools">
    <allow pkg="org.apache.kafka.clients.admin" />
    <allow pkg="kafka.admin" />
    <allow pkg="joptsimple" />
    <allow pkg="org.apache.kafka.clients.consumer" />
  </subpackage>

  <subpackage name="tier">
    <allow pkg="kafka.tier.domain" />
    <allow pkg="kafka.tier.client" />
    <allow pkg="kafka.tier.state" />
    <allow pkg="kafka.tier.exceptions" />
    <allow pkg="kafka.tier.serdes" />
    <allow pkg="kafka.tier.store" />
    <allow pkg="kafka.tier.topic" />
    <allow pkg="kafka.tier.fetcher" />
    <allow class="kafka.server.TierFetchDataInfo" />
    <allow class="kafka.server.TierLogReadResult" />
    <allow class="kafka.server.DelayedFetch" />
    <allow class="kafka.server.FetchDataInfo" />
    <allow class="kafka.server.LogReadResult"/>
    <allow class="kafka.log.AbortedTxn"/>
    <allow pkg="org.apache.kafka.clients.admin" />
    <allow pkg="org.apache.kafka.clients.consumer" />
    <allow pkg="org.apache.kafka.clients.producer" />
    <allow class="kafka.server.KafkaConfig" />
    <allow class="kafka.server.Defaults"/>
    <allow class="kafka.log.LogConfig" />
    <allow class="kafka.log.OffsetPosition" />
    <allow class="kafka.log.IndexEntry" />
    <allow class="kafka.server.LogDirFailureChannel" />
    <allow class="org.apache.kafka.test.TestUtils" />
    <allow class="kafka.log.OffsetIndex"/>
    <allow class="kafka.log.TimeIndex"/>
    <allow class="kafka.log.LogSegment"/>
    <allow class="kafka.server.DelayedOperationKey"/>
    <allow class="kafka.server.TierFetchOperationKey"/>
    <allow class="kafka.server.TierOffsetForTimestampOperationKey"/>
    <allow class="kafka.tier.TopicIdPartition"/>
    <subpackage name="client">
      <allow pkg="kafka.tier" />
    </subpackage>
    <subpackage name="domain">
      <allow class="com.google.flatbuffers.FlatBufferBuilder" />
    </subpackage>
    <subpackage name="fetcher">
      <allow class="kafka.server.DelayedOperation" />
      <allow class="kafka.server.checkpoints.LeaderEpochCheckpointBuffer" />
      <allow class="kafka.server.epoch.EpochEntry" />
      <allow class="kafka.log.TimestampOffset" />
      <allow class="kafka.tier.TierTimestampAndOffset"/>
      <allow class="kafka.tier.archiver.ArchiveTask"/>
    </subpackage>
    <subpackage name="store">
      <allow pkg="com.amazonaws" />
      <allow class="kafka.log.Log" />
      <allow class="kafka.log.LogSegment" />
    </subpackage>
    <subpackage name="state">
      <allow class="com.google.flatbuffers.FlatBufferBuilder" />
      <allow class="kafka.log.Log" />
      <allow class="kafka.log.Log$" />
      <allow class="kafka.log.TierLogSegment" />
    </subpackage>
    <subpackage name="tools">
      <allow class="kafka.log.Log" />
    </subpackage>
    <subpackage name="topic">
      <allow class="kafka.zk.AdminZkClient" />
      <allow class="kafka.tier.TierMetadataManager" />
      <allow class="kafka.tier.TierTopicManagerCommitter" />
    </subpackage>
  </subpackage>

  <subpackage name="coordinator">
    <allow class="kafka.server.MetadataCache" />
  </subpackage>

  <subpackage name="examples">
    <allow pkg="org.apache.kafka.clients" />
  </subpackage>

  <subpackage name="common">
      <!-- TopicPlacement needs JSON SerDe support -->
    <allow pkg="com.fasterxml.jackson" />
  </subpackage>
</import-control>
