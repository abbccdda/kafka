              "operations": [ "All" ]
            },
            {
              "resourceType": "ClusterApiKey",
              "operations": [ "All" ]
            },
            {
              "resourceType": "ClusterMetric",
              "operations": [ "All" ]
            },
            {
              "resourceType" : "SecurityMetadata",
              "operations" : ["Describe", "Alter"]
            }
          ]
        }
      ]
    },
    {
      "name": "CloudClusterAdmin",
      "policies": [
        {
          "scopeType": "Organization",
          "allowedOperations": [
            {
              "resourceType": "User",
              "operations": [ "Invite", "Describe" ]
            },
            {
