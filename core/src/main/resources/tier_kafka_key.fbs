struct UUID {
  mostSignificantBits: long;
  leastSignificantBits: long;
}

table TierKafkaKey {
  topicId: UUID (id: 0);
  partition: int (id: 1);
  topicName: string (id: 2);
}

root_type TierKafkaKey;
